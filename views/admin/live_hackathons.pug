doctype html
html(lang='en')
	head
		include ../partials/head_preamble.pug	
	body
		include ../partials/navbar.pug
		.container
			.starter-template
				h1 Live Hackathons
				p.lead Delete or edit the hackathons that are live.
				.bs-example
					table.table.table-striped.lead
						thead
							tr
								th Naam
								th Waar
								th Wanneer
								th Actie
						tbody
							each hackathon in hackathons
								tr
									td 
										a(href=hackathon.url, target='_blank') #{hackathon.name}
									td #{hackathon.location.city}									
									td #{hackathon.start_date}
									td 
										a.btn.btn-danger(href='/admin/deleteHackathon/'+hackathon.id) Delete 
										a.btn.btn-warning(href='#' data-toggle='modal' data-target='#editModal'
											data-name= hackathon.name
											data-city= hackathon.location.city
											data-url= hackathon.url
											data-start_date= hackathon.start_date
											data-end_date= hackathon.end_date
											data-id= hackathon.id
										) Edit
										//- ^ It needs to call a modal view with the data in it.
include ../partials/scripts.pug
include ../partials/edit_hackathon.pug
